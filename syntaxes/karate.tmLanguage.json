{
    "name": "Karate",
    "scopeName": "source.karate",
    "patterns": [
        {
            "include": "#feature"
        },
        {
            "include": "#scenario"
        },
        {
            "include": "#steps"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#variables"
        }
    ],
    "repository": {
        "feature": {
            "match": "^\\s*(Feature:)(.*)$",
            "captures": {
                "1": { "name": "keyword.control.karate" },
                "2": { "name": "entity.name.type.karate" }
            }
        },
        "scenario": {
            "match": "^\\s*(Scenario:|Scenario Outline:|Background:)(.*)$",
            "captures": {
                "1": { "name": "keyword.control.karate" },
                "2": { "name": "entity.name.function.karate" }
            }
        },
        "steps": {
            "match": "^\\s*(Given|When|Then|And|But|\\*)(\\s+)(.*)$",
            "captures": {
                "1": { "name": "keyword.control.karate" },
                "3": { "name": "string.unquoted.karate" }
            }
        },
        "comments": {
            "match": "#.*$",
            "name": "comment.line.number-sign.karate"
        },
        "strings": {
            "patterns": [
                {
                    "match": "'[^']*'",
                    "name": "string.quoted.single.karate"
                },
                {
                    "match": "\"[^\"]*\"",
                    "name": "string.quoted.double.karate"
                }
            ]
        },
        "variables": {
            "match": "\\$\\{[^}]+\\}",
            "name": "variable.other.karate"
        }
    }
}