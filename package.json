{
    "name": "karate-runner",
    "displayName": "Karate Runner",
    "description": "Karate DSL support for VS Code with automatic JAR management and Python integration",
    "version": "0.0.1",
    "publisher": "karate-runner",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages",
        "Testing"
    ],
    "activationEvents": [
        "onLanguage:karate",
        "onCommand:karate-runner.runTest",
        "onCommand:karate-runner.runScenario",
        "onCommand:karate-runner.configureLogging",
        "onView:karateRunnerView"
    ],
    "main": "./out/extension/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [{
                "id": "karate-runner-sidebar",
                "title": "Karate Runner",
                "icon": "resources/karate.svg"
            }]
        },
        "views": {
            "karate-runner-sidebar": [
                {
                    "id": "karateFeatureExplorer",
                    "name": "Feature Explorer",
                    "type": "webview"
                },
                {
                    "id": "karateRunHistory",
                    "name": "Run History",
                    "type": "webview"
                },
                {
                    "id": "karateConfiguration",
                    "name": "Configuration",
                    "type": "webview"
                }
            ]
        },
        "languages": [{
            "id": "karate",
            "aliases": ["Karate", "karate"],
            "extensions": [".feature"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "karate",
            "scopeName": "source.karate",
            "path": "./syntaxes/karate.tmLanguage.json"
        }],
        "commands": [
            {
                "command": "karate-runner.runTest",
                "title": "Karate: Run Test"
            },
            {
                "command": "karate-runner.runScenario",
                "title": "Karate: Run Scenario"
            },
            {
                "command": "karate-runner.configureLogging",
                "title": "Karate: Configure Logging"
            },
            {
                "command": "karate-runner.analyzeTest",
                "title": "Karate: Analyze Test"
            }
        ],
        "configuration": {
            "title": "Karate Runner",
            "properties": {
                "karateRunner.logging.outputMode": {
                    "type": "string",
                    "enum": ["extension", "logback"],
                    "default": "extension",
                    "description": "Choose how to handle test output"
                },
                "karateRunner.logging.logbackFile": {
                    "type": "string",
                    "default": null,
                    "description": "Path to custom logback configuration file"
                },
                "karateRunner.python.path": {
                    "type": "string",
                    "default": "python3",
                    "description": "Path to Python interpreter"
                },
                "karateRunner.analysis.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable test analysis features"
                },
                "karateRunner.reporting.historyLimit": {
                    "type": "number",
                    "default": 100,
                    "description": "Number of test runs to keep in history"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && pip3 install -r python-requirements.txt",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "postinstall": "pip3 install -r python-requirements.txt"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/node": "^16.11.7",
        "@types/ws": "^8.5.4",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "typescript": "^4.4.4",
        "@types/glob": "^7.2.0",
        "@types/uuid": "^8.3.0"
    },
    "dependencies": {
        "glob": "^7.2.0",
        "uuid": "^8.3.2",
        "ws": "^8.13.0"
    }
}