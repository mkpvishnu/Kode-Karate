{
    "name": "karate-runner",
    "displayName": "Karate Runner",
    "description": "Karate DSL support for VS Code with automatic JAR management",
    "version": "0.0.1",
    "publisher": "karate-runner",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages",
        "Testing"
    ],
    "activationEvents": [
        "onLanguage:karate",
        "onCommand:karate-runner.runTest",
        "onCommand:karate-runner.runScenario",
        "onCommand:karate-runner.configureLogging"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "karate",
            "aliases": ["Karate", "karate"],
            "extensions": [".feature"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "karate",
            "scopeName": "source.karate",
            "path": "./syntaxes/karate.tmLanguage.json"
        }],
        "commands": [
            {
                "command": "karate-runner.runTest",
                "title": "Karate: Run Test"
            },
            {
                "command": "karate-runner.runScenario",
                "title": "Karate: Run Scenario"
            },
            {
                "command": "karate-runner.configureLogging",
                "title": "Karate: Configure Logging"
            }
        ],
        "configuration": {
            "title": "Karate Runner",
            "properties": {
                "karateRunner.logging.outputMode": {
                    "type": "string",
                    "enum": ["extension", "logback"],
                    "default": "extension",
                    "description": "Choose how to handle test output ('extension' for VS Code output or 'logback' for custom logback configuration)"
                },
                "karateRunner.logging.logbackFile": {
                    "type": "string",
                    "default": null,
                    "description": "Path to custom logback configuration file (relative to workspace root)"
                }
            }
        },
        "menus": {
            "editor/title": [
                {
                    "when": "resourceExtname == .feature",
                    "command": "karate-runner.runTest",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "karate-runner.configureLogging",
                    "when": "true"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "eslint": "^8.1.0",
        "typescript": "^4.4.4",
        "@types/glob": "^7.2.0"
    },
    "dependencies": {
        "glob": "^7.2.0"
    }
}